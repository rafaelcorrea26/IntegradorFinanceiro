  end;
end;

function TContasPagarMC.IncluirOuAltera(pEmpresaPrincipal: Boolean = false): String;
var
  lQuery: TQuery;
  lTitulo: string;
begin
  lTitulo := EmptyStr;

  if ExisteEmpresaTitulo(FEmpresaTitulo) then
