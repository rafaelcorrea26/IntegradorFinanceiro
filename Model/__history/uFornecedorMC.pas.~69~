  string;
FNumero:
  string;
FBairro:
  string;
FCidade:
  string;
FCep:
  string;
FIe:
  string;
FFone:
  string;
FFax:
  string;
FCelular:
  string;
FEmail:
  string;
FCodigoCidadeIbge:
  string;
FUf:
  string;
FSped:
  Boolean;
  FUsuarioCadastro := 0;
  FUsuarioAlteracao := 0;
  FDataAlteracao := 0;
  FDataCadastro := 0;
  FAtivo := true;
  FPessoaFisica := true;
  FCpf := emptystr;
  FCnpj := emptystr;
  FSite := emptystr;
  FObservacao1 := emptystr;
  FObservacao2 := emptystr;
  FEnderecoCobranca := emptystr;
  FBairroCobranca := emptystr;
  FCidadeCobranca := emptystr;
  FCepCobranca := emptystr;
  FUfCobranca := emptystr;
  FLocalizacao := 0;
  FExtra := 0;
  FUtilizarRotinaAtacado := False;
  FObservacaoGeral := emptystr;
  FNomeRepresentante := emptystr;
  FFoneRepresentante := emptystr;
  FEmailRepresentante := emptystr;
  FEmissaoUltimoMovimento := 0;
  FNotaFiscalUltimoMovimento := emptystr;
  FValorNotaFiscalUltimoMovimento := 0;
  FDataNascimento := 0;
  FCarteiraIdentidade := emptystr;
  FSequencia := 0;
  FAlterarCustos := False;
  FRegimeTributario := 0;
  FCrt := 0;
  FCNAE := emptystr;
end;

constructor TFornecedorMC.Create;
begin
  FQuery := TFDquery.Create(nil);
  FQuery.Connection := Tconnection.ObjectConnection.Connection;

  FDataSet := TFDquery.Create(nil);
  FDataSet.Connection := Tconnection.ObjectConnection.Connection;
end;

destructor TFornecedorMC.Destroy;
begin
  FDataSet.Free;
  FQuery.Free;

  inherited;
end;

procedure TFornecedorMC.Excluir(pEfetuarCommit: Boolean);
begin
  // HS-540 // Vagner
  FDataSet.Close;
  FDataSet.SQL.Clear;
  FDataSet.SQL.Add('DELETE FROM MC02FORNEC WHERE MC02CODIGO = :MC02CODIGO ');
  FDataSet.ParamByName('MC02CODIGO').AsInteger := FCodigo;
  FDataSet.ExecSQL;

  if (pEfetuarCommit) then
  begin
    FDataSet.Connection.commit;
  end;
end;

class function TFornecedorMC.Existe(pCodigo: Integer): Boolean;
var
  lQuery: TFDquery;
begin
  Result := False;
  lQuery := TFDquery.Create(nil);
  try

    lQuery.Connection := Tconnection.ObjectConnection.Connection;
    lQuery.SQL.Add('SELECT * FROM MC02FORNEC WHERE MC02CODIGO = :CODIGO');
    lQuery.ParamByName('CODIGO').AsInteger := pCodigo;
    lQuery.Open;

    if (lQuery.RecordCount > 0) then
    begin
      Result := true;

      if not Assigned(FObjetoBusca) then
      begin
        FObjetoBusca := TFornecedorMC.Create;
      end;
      FObjetoBusca.Codigo := pCodigo;
      FObjetoBusca.Carrega;
    end;
  finally
    lQuery.Free;
  end;
end;

function TFornecedorMC.GeraProximoCodigo: Integer;
begin
  Result := 0;

  FQuery.Close;
  FQuery.SQL.Clear;
  FQuery.SQL.Add('SELECT MAX(MC02CODIGO) + 1 PROXIMO_CODIGO FROM MC02FORNEC ');
  FQuery.Open;

  if FQuery.RecordCount > 0 then
  begin
    Result := FQuery.FieldByName('PROXIMO_CODIGO').AsInteger;
  end;
end;

function TFornecedorMC.GetSN(pBoolean: Boolean): string;
begin
  Result := IfThen(pBoolean, 'S', 'N');
end;

